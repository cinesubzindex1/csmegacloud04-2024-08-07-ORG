<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TeleGram Download</title>
    <link rel="stylesheet" href="/css/dl.css">
    <meta http-equiv="refresh" content="100; URL=https://outrightsham.com/qj3u0dhi2?key=aa36ab12708b3d7b7b9ef30a1334084d" />
</head>
<body>
    <div class="container">
        <div id="box">
            <div class="download-section">
                <h4>Click Telegram Download Button</h4>
                <div id="dl-links"></div>
            </div>

            <div class="additional-info">
                <h2>ðŸ”° Help ðŸ”°</h2>
                <p>If Any Issue Please Contact <a href="<%= info.help %>">Admin</a>
            </div>
        </div>
        <div id="count">
            <h4>Cinesubz Download Page</h4><h1 id="second"></h1>
        </div>
    </div>
    <script>
            let countdown = <%- timer.time %>;
            let active = <%- timer.active %>;
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {

            const timerElement = document.querySelector("#second");
            timerElement.textContent = `Please wait ${countdown} seconds...`;

            const downloadSection = document.querySelector(".download-section");

            function applyUrl() {
                document.querySelector("#box").style.display = "block";
                document.querySelector("#count").style.display = "none";
            const dlBtn = document.querySelector("#dl-links");

                dlBtn.innerHTML += '<a href="<%= tg %>" class="download-btn" id="link2" target="_blank">Telegram Download</a>';
            }

            if(active) {
            const intervalId = setInterval(function() {
                countdown--;
                timerElement.textContent = `Please wait ${countdown} seconds...`;
                if (countdown <= 0) {
                    clearInterval(intervalId);
                    applyUrl();
                }
            }, 1000);
        } else {
            applyUrl();
        }
        });
    </script>
</body>
</html>
